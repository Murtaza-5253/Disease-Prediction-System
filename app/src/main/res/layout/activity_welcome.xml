<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lyt"
    tools:context=".activities.Welcome_Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/mainicon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:fontFamily="@font/mons"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="This is Disease Prediction System,\nWelcome!"
        android:textAlignment="center"
        android:textColor="#205072"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:fontFamily="@font/mons"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="A Corona Tracer "
        android:textAlignment="center"
        android:textColor="#68B2A0"
        android:textSize="16sp"
        android:textStyle="normal" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/d"
        android:id="@+id/imageView2"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"></pl.droidsonroids.gif.GifImageView>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btngetStart"
        android:textColor="#FFFFFF"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="Let's Get Started"
        android:textSize="18sp"
        android:onClick="getStarted"
        android:fontFamily="@font/mons"
        android:background="@drawable/d2"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"></Button>



</RelativeLayout>