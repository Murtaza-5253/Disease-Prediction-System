<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Disease_Info">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/mons"
        android:gravity="center"
        android:shadowColor="@color/colorPrimary"
        android:text="Disease Name"
        android:id="@+id/Dis"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_marginTop="28dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@color/colorPrimary"
        android:layout_below="@+id/Dis"
        android:dividerPadding="22dp"
        android:translationY="80dp"
        android:showDividers="middle"
        android:layout_marginTop="20dp"
        android:id="@+id/rela"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mons"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:shadowColor="@color/colorPrimary"
            android:text="Precautions"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/txtDisPrec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/englebert"
            android:gravity="start"
            android:shadowColor="@color/colorPrimary"
            android:textColor="#205072"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@color/colorPrimary"
        android:dividerPadding="22dp"
        android:showDividers="middle"
        android:layout_below="@+id/rela"
        android:translationY="80dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mons"
            android:gravity="center"
            android:shadowColor="@color/colorPrimary"
            android:text="Necessary Medications"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/txtDisMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/englebert"
            android:gravity="end"
            android:shadowColor="@color/colorPrimary"
            android:textColor="#205072"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
</RelativeLayout>