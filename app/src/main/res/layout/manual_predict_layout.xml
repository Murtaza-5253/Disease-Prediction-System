<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/txtSymp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"

        android:editable="false"
        android:fontFamily="@font/mons"
        android:hint="Symp1"
        android:onClick="Symp1"
        android:padding="20dp"
        android:text="Select"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:editable="false"
        android:fontFamily="@font/mons"
        android:hint="Symps"
        android:padding="20dp"
        android:text="Do you have any other symptoms from the following?"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtOtherSym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:editable="false"
        android:fontFamily="@font/mons"
        android:hint="Symps"
        android:padding="20dp"
        android:text="Other Symptoms"
        android:textAlignment="textStart"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSymp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:editable="false"

        android:fontFamily="@font/mons"
        android:hint="Symp2"
        android:onClick="Symp2"
        android:padding="20dp"
        android:text="Select"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to get sure?"
        android:onClick="switchSymps"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
        android:id="@+id/lnr">
    <TextView
        android:id="@+id/txtSymp3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:editable="false"


        android:fontFamily="@font/mons"
        android:onClick="Symp3"
        android:padding="20dp"
        android:text="Select"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/txtSymp4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:editable="false"


            android:fontFamily="@font/mons"
            android:onClick="Symp3"
            android:padding="20dp"
            android:text="Select"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtSymp5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:editable="false"


            android:fontFamily="@font/mons"
            android:onClick="Symp3"
            android:padding="20dp"
            android:text="Select"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:onClick="Predict"
        android:textColor="@android:color/white"
        android:fontFamily="@font/mons"
        android:textSize="18sp"
        android:background="@drawable/box"
        android:text="Predict" />

    <TextView
        android:id="@+id/txtDisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="diseaseInfo"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/mons"
        android:padding="20dp"
        android:text="Disease"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>